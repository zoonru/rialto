{
    "name": "zoon/rialto",
    "description": "Manage Node resources from PHP",
    "keywords": [
        "php",
        "node",
        "wrapper",
        "communication",
        "bridge",
        "socket"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Johann Pardanaud",
            "email": "pardanaud.j@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "clue/socket-raw": "^1.6",
        "psr/log": "^2.0 || ^3.0",
        "symfony/process": "^5.4 || ^6.0 || ^7.0"
    },
    "require-dev": {
        "monolog/monolog": "^2.4 || ^3.0",
        "phpunit/phpunit": "^10 || ^11"
    },
    "suggest": {
        "ext-weakref": "Required to run all the tests"
    },
    "autoload": {
        "psr-4": {
            "Nesk\\Rialto\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nesk\\Rialto\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": "npm install",
        "test": "./vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
